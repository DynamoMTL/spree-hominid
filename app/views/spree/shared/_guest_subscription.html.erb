<% @subscriber ||= Spree::Chimpy::Subscriber.new %>
<%= form_for @subscriber do |f| %>
  <div>
    <h2><%= t "spree.chimpy.subscribe_title" %></h2>
    <%= f.label :email, t("spree.chimpy.email.label") %>
    <%= f.email_field :email, placeholder: t("spree.chimpy.email.placeholder") %>
    <%= f.submit %>
  </div>
<% end %>
